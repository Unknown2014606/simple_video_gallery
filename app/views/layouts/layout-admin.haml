%html
 %head
  = stylesheet_link_tag "application"
  = stylesheet_link_tag "admin"
  = javascript_include_tag "application"
  = content_for :head
 %body
  .row
   .large-12.medium-12.small-12.columns
    .row
     .large-12.medium-12.small-12.columns
      .ham-header
       .large-6.medium-6.small-6.columns
        %h1 73ham
       .large-6.medium-6.small-6.columns
        %nav(class="top-bar" data-topbar)
         %ul(class="title-area")
          %li.name(class="#{@active == 'home' ? 'active' : ''}")
           %h1
            %a(href="/") Home
          %li(class="toggle-topbar menu-icon")
           %a(href="#")
           %span Menu
         %section.top-bar-section
          %ul.left
           %li(class="#{@active == 'videos' ? 'active' : ''}")
            %a(href="/videos") Videos
          %ul.right
           %li
            %a(href="/admin/video_list") Edit Videos
           %li
            %a(href="/admin/topic_list") Edit Topics
           %li
            %a(href="/admin/logout") Logout
    .scroll-container(role="main")
     .row
      .large-8.large-offset-2.medium-4.medium-offset-1.columns
       = yield
  %script
   $(document).foundation();

